generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id          String   @id @default(uuid())
  pageId      String
  accessToken String
  Metric      Metric[]
}

model Metric {
  id          String   @id
  name        String
  period      String
  title       String?
  description String
  pageId      String
  Page        Page     @relation(references: [id], fields: [pageId])
  Values      Values[]
}

model Values {
  id       Int       @id @default(autoincrement())
  value    Int
  end_time DateTime?
  metricId String
  Metric   Metric    @relation(fields: [metricId], references: [id])

  @@unique([metricId, end_time])
}

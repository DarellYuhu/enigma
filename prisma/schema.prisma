generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  displayName String
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ApiUrl {
  id        String   @id
  url       String   @unique
  type      Type
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  VIEWER
  ANALYST
  ADMIN
}

enum Type {
  YOUTUBE
  TIKTOK
  TWITTER
}
